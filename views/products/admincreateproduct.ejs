<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head.ejs') %>

  <body id="default_theme" class="it_service blog_detail">
    <%- include('../includes/navigation.ejs') %>

    <div class="section padding_layout_1 blog_grid">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pull-right">
            <div class="full">
              <div class="blog_section margin_bottom_0">
                <div class="">
                  <h4 text-align="center">Create Product</h4>
                  <div class="row">
                    <div class="full">
                      <div
                        class="col-lg-12 col-md-12 col-sm-12 col-xs-12 contant_form"
                      >
                        <div class="form_section">
                          <form
                            class="form_contant"
                            method="POST"
                            action="/create"
                            enctype="multipart/form-data"
                          >
                            <fieldset>
                              <div class="row">
                                <div class="col-md-6">
                                  <div class="row">
                                    <div
                                      class="field col-lg-12 col-md-12 col-sm-12 col-xs-12"
                                    >
                                      <h4>Name</h4>
                                      <input
                                        type="hidden"
                                        name="product_id"
                                        value=""
                                      />
                                      <input
                                        class="field_custom"
                                        name="product_name"
                                        placeholder="Name"
                                        type="text"
                                        value=""
                                        required
                                      />
                                    </div>
                                  </div>
                                  <div class="row">
                                    <div
                                      class="field col-lg-12 col-md-12 col-sm-12 col-xs-12"
                                    >
                                      <h4>Image_Path</h4>
                                      <input
                                        type="hidden"
                                        name="product_id"
                                        value=""
                                      />
                                      <input
                                        class="field_custom"
                                        name="image_path"
                                        placeholder="Name"
                                        type="text"
                                        value=""
                                        required
                                      />
                                    </div>
                                  </div>
                                  <div class="row">
                                    <div
                                      class="field col-lg-12 col-md-12 col-sm-12 col-xs-12"
                                    >
                                      <h4>Category</h4>
                                      <select
                                        class="field_custom"
                                        name="category"
                                        id="category"
                                        required
                                      >
                                        <option hidden>Choose</option>
                                        <option value="Toner">Toner</option>
                                        <option value="Essence">Essence</option>
                                        <option value="Serum">Serum</option>
                                      </select>
                                    </div>
                                  </div>
                                  <div class="row">
                                    <div
                                      class="field col-lg-6 col-md-6 col-sm-12 col-xs-12"
                                    >
                                      <h4>Amount</h4>
                                      <input
                                        class="field_custom"
                                        name="amount"
                                        placeholder="Amount"
                                        type="number"
                                        value=""
                                        required
                                      />
                                    </div>
                                    <div
                                      class="field col-lg-6 col-md-6 col-sm-12 col-xs-12"
                                    >
                                      <h4>Price</h4>
                                      <input
                                        class="field_custom"
                                        name="price"
                                        placeholder="Price"
                                        type="number"
                                        value=""
                                        required
                                      />
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <div class="row">
                                <div
                                  class="field col-lg-12 col-md-12 col-sm-12 col-xs-12"
                                >
                                  <h4>Detail</h4>
                                  <textarea
                                    class="field_custom"
                                    placeholder="Detail"
                                    name="detail"
                                  ></textarea>
                                </div>
                                <div class="center">
                                  <button type="submit" class="btn main_bt">
                                    Save
                                  </button>
                                </div>
                              </div>
                            </fieldset>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- footer -->
    <%- include('../includes/end.ejs') %>
  </body>
</html>
